{
  "name": "snippets",
  "version": "1.0.0",
  "description": "Automatically categorize Github issues as a README",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "npm run start && npm run build:ts && npm run server",
    "start": "tsc -w",
    "build": "node ./dist/index.js",
    "build:site": "npm run build:ts && npm run build && npm run build:snippets",
    "build:ts": "tsc",
    "build:snippets": "node ./dist/generatePage.js",
    "server": "http-server ./dist -p 9967",
    "prettier": "prettier -c --write **/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BiYuqi/snippets.git"
  },
  "author": "biyuqiwan@163.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BiYuqi/snippets/issues"
  },
  "homepage": "https://github.com/BiYuqi/snippets#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    ".{js,jsx,ts,tsx,json,md}": [
      "prettier -c --write **/*",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/node": "^13.9.0",
    "@types/node-fetch": "^2.5.5",
    "http-server": "^0.12.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "node-fetch": "^2.6.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3"
  }
}
